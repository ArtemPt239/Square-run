<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="New game!"
                android:id="@+id/button" android:textSize="40dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Let&apos;s play!"
            android:id="@+id/text" android:textSize="30dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Здесь инфа о зарплате"
            android:id="@+id/coinsText" android:textSize="30dp"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="&lt;"
                android:id="@+id/buttonPrevious" android:textSize="45dp" android:layout_gravity="left|center_vertical"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text=">"
                android:id="@+id/buttonNext" android:textSize="45dp" android:singleLine="false"
                android:layout_gravity="right|center_vertical"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Texturename"
                android:id="@+id/texturesText" android:layout_gravity="center" android:gravity="center"
                android:textSize="30dp"/>
    </FrameLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Buy this texture"
            android:id="@+id/buttonBuy" android:textSize="30dp"/>
    <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="New Button"-->
            <!--android:id="@+id/cheat"/>-->
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Для справки и доступа к покупке бонусов откройте OptionsMenu"
            android:id="@+id/infoText" android:layout_gravity="center_horizontal" android:textSize="30dp"/>
</LinearLayout>

